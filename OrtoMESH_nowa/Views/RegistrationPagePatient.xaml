<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" BackgroundImage="iPad.24.04.jpg" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="OrtoMESH_nowa.Views.RegistrationPagePatient">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Entry x:Name="RegistrationNameEntry" Placeholder="Name" WidthRequest="240" TextColor="Black" />
        <Entry x:Name="RegistrationSurnameEntry" Placeholder="Surname" WidthRequest="240" TextColor="Black" />
        <Entry x:Name="RegistrationCityEntry" Placeholder="City" WidthRequest="240" TextColor="Black" />
        <Entry x:Name="RegistrationAgeEntry" Placeholder="Age" WidthRequest="240" TextColor="Black" />
        <Entry x:Name="RegistrationNumberEntry" Placeholder="Phone number" WidthRequest="240" TextColor="Black" />
        <Entry x:Name="RegistrationMailEntry" Placeholder="Mail" WidthRequest="240" TextColor="Black"/>
        <Button Text="Sign up" TextColor="Black" FontSize="20" Clicked="SignUpButton_Clicked"/>
        <Button Text="Back" TextColor="Black" FontSize="20" Clicked="BackButton_Clicked" VerticalOptions="EndAndExpand"/>
    </StackLayout>
</ContentPage>
